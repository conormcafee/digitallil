{
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "tailwindcss": "^3.2.2"
  },
  "scripts": {
    "css": "tailwindcss -i ./src/css/style.css -o ./_site/css/style.css --watch",
    "dev": "eleventy --serve",
    "build": "eleventy --serve && tailwindcss -i ./src/css/style.css -o ./_site/css/style.css --watch",
    "build:prod": "eleventy && tailwindcss -i ./src/css/style.css -o ./_site/css/style.css --minify"
  }
}
